{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/swly777/FIT3179/main/line-chart.csv"
  },
  "selection": {
    "countryFilter": {
      "type": "multi",
      "fields": ["country"],
      "title": "Country Filter: ",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Australia",
          "Malaysia",
          "USA",
          "UK",
          "China",
          "Japan",
          "Russia"
        ],
        "labels": [
          "Show All",
          "Australia",
          "Malaysia",
          "United States",
          "UK",
          "China",
          "Japan",
          "Russia"
        ],
        "name": "Country Filter:"
      }
    }
  },
  "mark": {"type": "line", "point": true},
  "encoding": {
    "x": {"field": "year", "type": "ordinal"},
    "y": {"field": "fastest_time", "type": "quantitative", "axis": {"tickCount": 15},"scale": {"domain": [0, 200]}}, 
    "color": {
      "field": "country",
      "type": "nominal",
      "scale": {
        "domain": [
          "Australia",
          "Malaysia",
          "USA",
          "UK",
          "China",
          "Japan",
          "Russia"
        ],
        "range": [
          "#0072b2",
          "#FFCE00",
          "#5733FF",
          "#009e73",
          "#dc267f",
          "#fe6100"
        ]
      }
    },
    "tooltip": [
      {"field": "country", "type": "nominal"},
      {"field": "year", "type": "ordinal"},
      {"field": "fastest_time", "type": "quantitative"}
    ],
    "opacity": {
      "condition": {"selection": "countryFilter", "value": 1},
      "value": 0.2
    }
  }
}
