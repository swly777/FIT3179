{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/swly777/FIT3179/main/line-chart.csv"
  },
  "params": [
    {
      "name": "Circuit_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Australia",
          "Malaysia"
        ],
        "labels": [
          "Show All",
          "Australia",
          "Malaysia"
        ],
        "name": "country_selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "country_selection == null || datum['country'] == country_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Date"
    },
    "y": {
      "field": "fastest_time",
      "type": "quantitative",
      "title": "Lap Times",
      "axis": {"tickCount": 4}
    }
  },
  "layer": [
    {
      "mark": {"type" : "line", "point" : "true"},
      "encoding": {
        "color": {
          "field": "country",
          "type": "nominal",
          "title": "Country",
          "legend": {"symbolType": "stroke", "symbolSize": 50}
        }
      }
    },
    {
      "mark": "point",
      "selection": {
        "hover": {
          "type": "single",
          "on": "mouseover",
          "nearest": true,
          "empty": "none",
          "fields": ["year", "fastest_time"],
          "clear": "mouseout"
        }
      },
      "encoding": {
        "x": {"field": "year", "type": "ordinal"},
        "y": {"field": "fastest_time", "type": "quantitative"},    
        "color": {"field": "country", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "hover", "value": 1},
          "value": 0
        },
        "tooltip": [
          {"field": "year", "type": "ordinal"},
          {"field": "fastest_time", "type": "quantitative"},
          {"field": "country", "type": "nominal"}
        ]
      }
    },
    {
      "mark": "rule",
      "encoding": {"x": {"datum": "2023"}, "color": {"value": "grey"}}
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "bottom",
        "dy": 150,
        "dx": -10,
        "fontSize": 13,
        "fontWeight": "lighter",
        "color": "black"
      },
      "encoding": {
        "x": {"datum": "2023"},
        "y": {"value": 100},
        "text": {"value": "TBA"}
      }
    }
  ]
}
