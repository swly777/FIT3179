{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"width": 800,
"height": 500,
"title": { "text": "MVPs in F1 2022 Season" },
"data": {
"url": "F1_2022_data.csv"
},

    
    "encoding": {
        "x": { 
            "field": "Years", 
            "type": "quantitative",
            "title": "Years Competing"
        },
        "y": {
            "field": "Wins", 
            "type": "quantitative"
        }
    },
    "layer": [
        {
            "selection": {
                "team_highlight": {
                "type": "multi",
                "fields": ["Constructor"],
                "bind": "legend"
                }
                },
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "Points",
                    "type": "quantitative"
                },
                "color": {
                    "field": "Constructor",
                    "type": "nominal"
                },
                "opacity": {
                    "condition": {"selection": "team_highlight", "value": 0.9},
                    "value": 0.1
                    },   
                "tooltip": [
                    {"field": "Driver Name", "type": "nominal"},
                    {"field": "Podiums", "type": "quantitative", "format": ","}
                ]   
            }
        },

        {
            "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
            },
            "encoding": {
            "text": {"field": "Driver Name", "type": "nominal"},
            "color": {"value": "black"},
            "opacity": {
            "condition": {
            "test": "datum['Driver Name'] == 'Max Verstappen' || datum['Driver Name'] == 'Charles Leclerc'",
            "value": 1
            },
            "value": 0
            },
            "tooltip": [
                {"field": "Driver Name", "type": "nominal"},
                {"field": "Podiums", "type": "quantitative", "format": ","}
            ]   
                }
                }           
    ]
}




